{{#block "feature-01"}}
  {{#if section}}
    <section class="text-gray-600 body-font bg-stone-100">
      <div class="container md:w-[1280px] m-auto px-5 py-24 mx-auto">
        {{#or (isTruthy title) (isTruthy description)}}
            <div class="flex flex-col text-center w-full mb-20">
              {{{embed "blocks/heading/section-heading" title=title}}}
              {{#isTruthy description}}
                <p class="lg:w-2/3 text-xl mx-auto mt-2 leading-relaxed">
                  {{description}}
                </p>
              {{/isTruthy}}
            </div>
        {{/or}}
    {{/if}}

    <div class="flex-none {{#isTruthy bg}}bg-{{bg}}-400{{/isTruthy}} body-font container md:max-w-7xl py-16 mt-24 mx-auto">
      <div class="flex flex-wrap sm:-m-4 -mx-4 -mb-10 -mt-4 md:space-y-0 space-y-6">
        {{#each features}}
          <div class="p-4 md:w-1/3 flex">
            <div class="flex-grow pl-6">
              <h2 class="text-white text-lg title-font font-medium mb-2">
                {{title}}
              </h2>
              <p class="leading-relaxed">
                {{description}}
              </p>
              {{#if (isTruthy actionHref)}}
                <a href="{{actionHref}}" class="mt-3 text-amber-500 inline-flex items-center">
                  {{actionLabel}}
                  <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-4 h-4 ml-2" viewBox="0 0 24 24">
                    <path d="M5 12h14M12 5l7 7-7 7"></path>
                  </svg>
                </a>
              {{/if}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>

  {{#if section}}
      </div>
    </section>
  {{/if}}
{{/block}}