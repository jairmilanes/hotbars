{{#block "hero-01"}}
  <!-- start hero -->
  <section hb-bg-zoom="{{#if zoom}}true{{else}}false{{/if}}" class="text-{{default overlay "stone"}}-100 {{#if overlay}}bg-{{default overlay "stone"}}-600{{/if}} cover relative overflow-hidden pt-48 pb-8 flex flex-col items-center min-h-screen">
    {{#if (isTruthy bgImage)}}
      <div hb-bg="true" class="flex-none h-full absolute top-0 left-0 right-0 bottom-0 z-0 scale-150">
        <img src="{{bgImage}}" alt="" class="w-full h-full object-cover opacity-{{#not overlay}}100{{else}}40{{/not}}">
      </div>
    {{/if}}
    <div class="md:max-w-7xl flex flex-col justify-center m-auto grow z-10">
      <div class="lg:w-3/4 relative h-100 lg:mt-16 m-auto">
        <div class="text-center">
          {{{embed "blocks/heading/section-heading"
             title=title
             size=1
             class="text-white"
          }}}

          {{#isTruthy description}}
            <p class="text-xl md:text-2xl leading-snug mt-4">
              {{description}}
            </p>
          {{/isTruthy}}

          {{#if (isTruthy actionHref)}}
            <a href="{{actionHref}}" class="px-10 py-6 text-white bg-{{default buttonColor "stone"}}-600 hover:bg-{{default buttonColor "amber"}}-500 rounded inline-block mt-8 font-semibold text-xl">
              {{actionLabel}}
            </a>
          {{/if}}
        </div>
      </div>
    </div>
    <div class="z-10">
      {{#block "body"}}
      {{/block}}
    </div>
  </section>
  <!-- end hero -->
{{/block}}
