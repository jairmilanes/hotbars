{
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "files": ["src/index.ts", "src/modules.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.*", "test"]
}
