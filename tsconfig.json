{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "typeRoots": ["src/fake/types", "src/server/types", "node_modules/@types"],
    "paths": {
      "#server": ["./src/server"],
      "#server/*": ["./src/server/*"],
      "#fake": ["./src/fake"],
      "#fake/*": ["./src/fake/*"]
    }
  },
  "files": ["./src/modules.d.ts"],
  "include": ["**/*"],
  "exclude": ["src/client", "node_modules", "dist", "scripts"]
}
