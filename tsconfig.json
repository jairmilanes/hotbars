{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src/typings"]
  },
  "files": ["src/cli.ts", "src/index.ts", "src/modules.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.*", "test"]
}
