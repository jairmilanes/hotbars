{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": false,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ]
  },
  "files": ["src/cli.ts", "src/index.ts", "src/modules.d.ts"],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.*", "src/client", "tests", "dist", "scripts"]
}
