    "@types/handlebars-helpers": "^0.5.3",
    "@types/jest": "^29.2.3",
    "@types/json-server": "^0.14.4",
    "@types/lodash": "^4.14.189",
    "@types/lowdb": "^1.0.11",
    "@types/mailparser": "^3.4.0",
    "@types/mime-types": "^2.1.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.3",
    "@types/node-fetch": "^2.6.2",
    "@types/nodemailer": "^6.4.6",
    "@types/open": "^6.2.1",
