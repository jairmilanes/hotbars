{
  "name": "@jmilanes/hotbars",
  "description": "A modern hot reloading server highly configurable using express and handlebars for simple and fast website and applications development.",
  "version": "1.6.4",
  "main": "dist/index.js",
  "bin": {
    "hotbars": "dist/cli.js"
  },
  "type": "commonjs",
  "author": "Jair Milanes",
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/jairmilanes/hotbars"
  },
  "scripts": {
    "copy": "copyfiles -u 1 --verbose \"./src/client/**/*.*\"  dist",
    "build": "tsc",
    "watch": "node ./scripts/watch.js watch",
    "lint": "eslint src/ --fix",
    "format": "prettier . --write",
    "bundle": "browserify ./src/client/_scripts/runtime.js -o ./src/client/_scripts/runtime.bundle.js --external=Handlebars --ignore=handlebars",
    "bundle:tiny": "browserify ./src/client/_scripts/runtime.js -o ./src/client/_scripts/runtime.bundle.js --plugin=tinyify --external=Handlebars --ignore=handlebars",
    "postbuild": "npm run copy",
    "test": "jest --silent=false"
  },
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "apicache": "^1.6.3",
    "app-root-path": "^3.1.0",
    "bcryptjs": "^2.4.3",
    "chokidar": "^3.5.3",
    "commander": "^9.4.1",
    "cors": "^2.8.5",
    "cosmiconfig": "^7.0.1",
    "day-log-savings": "^1.0.4",
    "debug": "^4.3.4",
    "deformat": "^1.2.0",
    "dotenv": "^16.0.3",
    "express": "4.18.2",
    "express-rate-limit": "^6.6.0",
    "express-session": "^1.17.3",
    "express-validator": "^6.14.2",
    "express-ws": "^5.0.2",
    "front-matter": "^4.0.2",
    "glob": "^8.0.3",
    "handlebars": "^4.7.7",
    "handlebars-helpers": "^0.10.0",
    "handlebars-layouts": "^3.1.4",
    "handlebars-wax": "^6.1.0",
    "json-server": "^0.17.1",
    "lodash": "^4.17.21",
    "lodash-id": "^0.14.1",
    "mime-types": "^2.1.35",
    "multer": "^1.4.5-lts.1",
    "open": "^8.4.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0",
    "prettier": "^2.7.1",
    "sass": "^1.55.0",
    "slugify": "^1.6.5",
    "source-map-js": "^1.0.2",
    "tinyify": "^4.0.0",
    "uglify-js": "^3.17.4",
    "ws": "^7.4.0",
    "yargs": "^17.6.0"
  },
  "devDependencies": {
    "@handlebars/parser": "^2.1.0",
    "@types/apicache": "^1.6.1",
    "@types/app-root-path": "^1.2.4",
    "@types/bcryptjs": "^2.4.2",
    "@types/browserify": "^12.0.37",
    "@types/chokidar": "^2.1.3",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.14",
    "@types/express-session": "^1.17.5",
    "@types/express-ws": "^3.0.1",
    "@types/glob": "^8.0.0",
    "@types/handlebars": "^4.1.0",
    "@types/handlebars-helpers": "^0.5.3",
    "@types/jest": "^29.2.3",
    "@types/json-server": "^0.14.4",
    "@types/lodash": "^4.14.189",
    "@types/mime-types": "^2.1.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.3",
    "@types/open": "^6.2.1",
    "@types/passport": "^1.0.11",
    "@types/passport-local": "^1.0.34",
    "@types/prettier": "^2.7.1",
    "@types/sass": "^1.43.1",
    "@types/uglify-js": "^3.17.1",
    "@types/ws": "^8.5.3",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "browserify": "^17.0.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^29.3.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "optionalDependencies": {
    "@supabase/supabase-js": "^2.1.0"
  },
  "files": [
    "./dist"
  ],
  "keywords": [
    "handlebars",
    "hot-reload",
    "cli",
    "console",
    "terminal",
    "templates",
    "boilerplates",
    "command-line"
  ]
}
