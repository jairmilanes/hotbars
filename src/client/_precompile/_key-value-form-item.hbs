{{#block "_key-value-form-item"}}
  <div hb-list-item="{{id}}" id="{{id}}" class="flex mb-0">
    {{#embed
      "_input"
      type="text"
      name="key"
      placeholder="Key"
      value=key
      class="grow mr-4"
      size="sm"
    }}{{/embed}}
    {{#embed
      "_input"
      type="text"
      name="value"
      placeholder="Value"
      value=value
      class="grow mr-4"
      size="sm"
    }}{{/embed}}
    <div class="flex items-end">
      {{#embed
        "_button"
        id=""
        style="outline"
        color="rose"
        class="remove mb-2"
        rounded="md"
        size="md"
      }}
        {{#content "text"}}
          <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" fill="currentColor">
            <path
              d="M6.4 19 5 17.6l5.6-5.6L5 6.4 6.4 5l5.6 5.6L17.6 5 19 6.4 13.4 12l5.6 5.6-1.4 1.4-5.6-5.6Z"
            ></path>
          </svg>
        {{/content}}
      {{/embed}}
    </div>
  </div>
{{/block}}