<li class="flex py-2 border-t border-gray-100 dark:border-gray-700 text-sm first:border-0" data-filename="{{name}}">
  <span class="mr-2">
    <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 -960 960 960" width="24" fill="currentColor"><path d="M160-80v-800h400l240 240v560H160Zm360-520v-200H240v640h480v-440H520ZM240-800v200-200 640-640Z"/></svg>
  </span>
  <span class="grow">{{name}}</span>
  <span>{{size}} Kb</span>
  <span class="ml-4">
    {{#embed "_button" style="link" class="remove" attributes=(attr data-filename=name)}}
      {{#content "text"}}
        <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24" fill="currentColor">
            <path
              d="M6.4 19 5 17.6l5.6-5.6L5 6.4 6.4 5l5.6 5.6L17.6 5 19 6.4 13.4 12l5.6 5.6-1.4 1.4-5.6-5.6Z"
            ></path>
          </svg>
      {{/content}}
    {{/embed}}
  </span>
</li>