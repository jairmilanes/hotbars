{{#block "_data_collection"}}
  <h4
    tabindex="-1"
    class="flex block bg-white hover:bg-gray-100 dark:bg-gray-800 dark:hover:bg-gray-700 border-b border-gray-200 dark:border-gray-700">
    <a
      href="/_api/{{name}}"
      data-id="{{name}}"
      data-single="{{single}}"
      class="flex grow py-4 px-4">
      {{#if single}}
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960" class="w-6 h-auto mr-2 text-gray-500" fill="currentColor">
          <path d="M320-240h320v-80H320v80Zm0-160h320v-80H320v80ZM160-80v-800h400l240 240v560H160Zm360-520v-200H240v640h480v-440H520ZM240-800v200-200 640-640Z"/>
        </svg>
      {{else}}
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960" class="w-6 h-auto mr-2 text-gray-500" fill="currentColor">
          <path d="M360-240h440v-107H360v107ZM160-613h120v-107H160v107Zm0 187h120v-107H160v107Zm0 186h120v-107H160v107Zm200-186h440v-107H360v107Zm0-187h440v-107H360v107ZM80-160v-640h800v640H80Z"/>
        </svg>
      {{/if}}
      <span class="grow">{{default name "(no name)"}}</span>
    </a>

    <div hb-actions="true" class="flex gap-2">
      {{#embed "_toggle-slide-button"
         id=(append "collection-menu-" name)
         direction="top"
         start="2rem"
         end="1rem"
         duration=300
         align="right"
         color="gray"
      }}
        {{#content "actions"}}
          {{#embed "_form" id=(append "delete-collection-" name) action=(append "/_api/collections/" name) method="DELETE" ajax=true validation=false width="auto" silent="true" autoload="true" }}
            {{#content "submit"}}
              {{{embed
                "_confirm-button"
                id=(append "delete-collection-" (append name "-button"))
                type="submit"
                style="link"
                size="link"
                color="rose"
                text="Delete"
                title="Delete collection"
                class="text-right"
                duration=3000
              }}}
            {{/content}}
          {{/embed}}
        {{/content}}
      {{/embed}}
    </div>
  </h4>
{{/block}}