{{#if image}}
  <div class="inline-flex">
    <img class="w-{{default size 10}} h-{{default size 10}} rounded-full" src="{{image}}" alt="{{alt}}">
  </div>
{{else}}
  <div class="relative flex justify-center w-{{default size 10}} h-{{default size 10}} overflow-hidden bg-gray-100 rounded-full dark:bg-gray-600">
    <svg class="absolute w-{{default size 10}} h-{{default size 10}} text-gray-400 top-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd"></path>
    </svg>
  </div>
{{/if}}