{{#block "_pagination"}}
  <div class="flex flex-col items-center py-2 border-t">
    <!-- Help text -->
    <span class="text-sm text-gray-700 dark:text-gray-400">
      Showing <span class="font-semibold text-gray-900 dark:text-white">{{from}}</span> to <span
    class="font-semibold text-gray-900 dark:text-white">{{to}}</span> of <span
      class="font-semibold text-gray-900 dark:text-white">{{total}}</span> records
    </span>
    <!-- Buttons -->
    <div class="inline-flex mt-2 xs:mt-0">
      <button
        data-page="{{prev}}"
        class="px-4 py-2 text-sm font-medium text-white bg-gray-800 rounded-l hover:bg-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white disabled:opacity-50"
        {{#not (isTruthy prev)}}disabled{{/not}}>
        Prev
      </button>
      <button
        data-page="{{next}}"
        class="px-4 py-2 text-sm font-medium text-white bg-gray-800 border-0 border-l border-gray-700 rounded-r hover:bg-gray-900 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white disabled:opacity-50"
        {{#not (isTruthy next)}}disabled{{/not}}>
        Next
      </button>
    </div>
  </div>
{{/block}}