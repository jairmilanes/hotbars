{{#embed "_modal" id=id closable=true}}
  {{#content "body"}}
    <svg
      aria-hidden="true"
      class="mx-auto mb-4 w-14 h-14 text-gray-400 dark:text-gray-200"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
      xmlns="http://www.w3.org/2000/svg"
    ><path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
    ></path></svg>
    {{{embed "_heading" size="h4" text=message}}}
    {{{embed "_button"
             type="button"
             text=(default confirmText "Yes, I'm sure")
             attributes=(attr data-modal-confirm=id)
    }}}
    {{{embed "_button"
             type="button"
             color="gray"
             text=(default cancelText "No, cancel")
             attributes=(attr data-dismiss=id)
    }}}
  {{/content}}
{{/embed}}