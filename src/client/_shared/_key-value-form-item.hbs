{{#block "_key-value-form-item"}}
  <div id="{{id}}" class="flex mb-5">
    {{#embed
      "_input"
      type="text"
      name="key"
      label="Key"
      value=key
      className="grow mr-4"
    }}{{/embed}}
    {{#embed
      "_input"
      type="text"
      name="value"
      label="Value"
      value=value
      className="grow mr-4"
    }}{{/embed}}
    {{#embed
      "_button"
      id=""
      theme="outline"
      color="rose"
      rounded="full"
      className="remove"
      icon=true
    }}
      {{#content "content"}}
        <svg xmlns="http://www.w3.org/2000/svg" height="24" width="24">
          <path
            d="M6.4 19 5 17.6l5.6-5.6L5 6.4 6.4 5l5.6 5.6L17.6 5 19 6.4 13.4 12l5.6 5.6-1.4 1.4-5.6-5.6Z"
          ></path>
        </svg>
      {{/content}}
    {{/embed}}
  </div>
{{/block}}