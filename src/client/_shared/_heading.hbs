<{{size}} class="text-zinc-600 dark:text-zinc-300 font-bold
{{#if (eq size "h1")}}
  text-4xl mb-{{default margin "8"}}
{{/if}}
{{#if (eq size "h2")}}
text-3xl mb-{{default margin "7"}}
{{/if}}
{{#if (eq size "h3")}}
  text-2xl mb-{{default margin "6"}}
{{/if}}
{{#if (eq size "h4")}}
  text-1xl mb-{{default margin "5"}}
{{/if}}
{{#if (eq size "h5")}}
  text-xl mb-{{default margin "4"}}
{{/if}}
{{#if (eq size "h6")}}
  text-lg mb-{{default margin "3"}}
{{/if}}
">{{text}}</{{size}}>

