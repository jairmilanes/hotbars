{{#block "_page-header"}}
  <section class="container mx-auto grid grid-cols-1 py-8 px-{{default paddingX 0}} {{class}}">
    <div class="flex">
      {{#or title description}}
        <div class="flex flex-col grow">
          {{#if title}}
            {{> "_heading" size="h2" text=title margin=0 class="grow"}}
          {{/if}}
          {{#if description}}
            <p class="text-md">{{description}}</p>
          {{/if}}
        </div>
      {{/or}}
      {{{block "actions"}}}
    </div>
    {{{block "hero"}}}
  </section>
{{/block}}